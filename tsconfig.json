{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}